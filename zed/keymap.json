local keymap = zed.keymap
local opts = { noremap = true, silent = true }

-- Do things without affecting the registers
keymap.bind("x", "_x", opts)
keymap.bind("<Leader>p", '"0p"', opts)
keymap.bind("<Leader>P", '"0P"', opts)
keymap.bind("v<Leader>p", '"0p"', opts)
keymap.bind("<Leader>c", '"_c"', opts)
keymap.bind("<Leader>C", '"_C"', opts)
keymap.bind("v<Leader>c", '"_c"', opts)
keymap.bind("v<Leader>C", '"_C"', opts)
keymap.bind("<Leader>d", '"_d"', opts)
keymap.bind("<Leader>D", '"_D"', opts)
keymap.bind("v<Leader>d", '"_d"', opts)
keymap.bind("v<Leader>D", '"_D"', opts)

-- Increment/decrement
keymap.bind("+", "<C-a>", opts)
keymap.bind("-", "<C-x>", opts)

-- Delete a word backwards
keymap.bind("dw", 'vb"_d', opts)

-- Select all
keymap.bind("<C-a>", "gg<S-v>G", opts)

-- Disable continuations
keymap.bind("<Leader>o", "o<Esc>^Da", opts)
keymap.bind("<Leader>O", "O<Esc>^Da", opts)

-- Jumplist
keymap.bind("<C-m>", "<C-i>", opts)

-- New tab
keymap.bind("te", ":tabedit", opts)
keymap.bind("<tab>", ":tabnext<Return>", opts)
keymap.bind("<s-tab>", ":tabprev<Return>", opts)
-- Split window
keymap.bind("ss", ":split<Return>", opts)
keymap.bind("sv", ":vsplit<Return>", opts)
-- Move window
keymap.bind("sh", "<C-w>h", opts)
keymap.bind("sk", "<C-w>k", opts)
keymap.bind("sj", "<C-w>j", opts)
keymap.bind("sl", "<C-w>l", opts)

-- Resize window
keymap.bind("<C-w><left>", "<C-w><", opts)
keymap.bind("<C-w><right>", "<C-w>>", opts)
keymap.bind("<C-w><up>", "<C-w>+", opts)
keymap.bind("<C-w><down>", "<C-w>-", opts)

-- Diagnostics
keymap.bind("<C-j>", function()
	zed.diagnostic.goto_next()
end, opts)
